<odoo>
  <data>
    <!-- explicit list view definition -->


  <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="xero_data_store_action">
      <field name="name">Xero Data</field>
      <field name="res_model">shopify.shop.xero</field>
      <field name="view_mode">form</field>
    </record>

 <record id="menu_root_client_xero_action_form" model="ir.ui.view">
            <field name="name">Xero Form</field>
            <field name="model">shopify.shop.xero</field>
            <field name="arch" type="xml">
                <form string="Shopify Bundle Shop Settings" create="false" delete="false">

                    <sheet>
                        <notebook>
                            <page string="Shopify">
                                 <header>

                                    <button name="fetch_product" string="Xero Fetch Product" type="object" class="oe_highlight"/>
                                    <button name="fetch_order" string="Xero Fetch Order" type="object" class="oe_highlight"/>

                                </header>
                                <group>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="shop_name"/>
                                </group>
                                <group>
                                    <field name="products">
                                        <tree create="false">
                                            <field name="product_id"/>
                                            <field name="product_name"/>
                                            <field name="product_handle"/>
                                        </tree>
                                    </field>
                                </group>
                                <group>
                                    <field name="orders">
                                        <tree create="false">
                                            <field name="order_id"/>
                                            <field name="order_name"/>
                                            <field name="order_lines_data"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string="Xero Integration">
                                <group>
                                    <button name="redirect_xero" string="Xero Integration" type="object" />
                                    <group>
                                         <field name="sales_account_code"/>
                                         <field name="payment_account_code"/>
                                         <field name="shipping_account_code"/>
                                    </group>
                                    <button type="object" name="redirect_to_sync_xero_page">Go to Sync Page</button>
                                    <button type="object" name="execute_mapping_data">Fetch data</button>
                                </group>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

 <menuitem name="Xero Fetch" id="xero_data_store_menu" parent="xero_main" action="xero_data_store_action"/>


  </data>
</odoo>