            <field name="res_model">shopify.discount</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="shopify_discount">
              <field name="name">Shopify discount tree</field>
              <field name="model">shopify.discount</field>
              <field name="arch" type="xml">
                <tree>
                     <field name="name"/>
                     <field name="discount_type"/>
                     <field name="discount_amount"/>
                     <field name="products"/>
                     <field name="store_name"/>
                </tree>
              </field>
        </record>

      <record model="ir.ui.view" id="shopify_discount_product">
              <field name="name">Shopify discount product tree</field>
              <field name="model">shopify.discount.products</field>
              <field name="arch" type="xml">
                <tree>
                     <field name="shop_discount_id"/>
                     <field name="product_id"/>
                     <field name="product_name"/>
                     <field name="product_handle"/>
                     <field name="qty"/>
                    <field name ="product_price"/>
                    <field name="image_url"/>
                    <field name="varient_id"/>
                    <field name="store_name"/>
                </tree>
              </field>
        </record>
