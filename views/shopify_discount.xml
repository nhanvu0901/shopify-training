      <record id="shopify_discount_report_tree" model="ir.ui.view">
            <field name="name">Shopify discount tree</field>
            <field name="model">shopify.discount.report</field>
            <field name="arch" type="xml">
                <form string="Shopify discount report" create="false" delete="false">

                    <sheet>
                        <notebook>
                            <page string="Shopify">

                                <group>
                                   <field name="discount_id"/>

                                 <field name="date_start"/>
                                     <field name="date_end"/>



                                <field name="shopify_count">
                                    <tree create="false">
                                        <field name="bundle_id"/>
                                        <field name="number_add_to_cart"/>
                                        <field name="price_off"/>
                                        <field name="sale"/>
                                        <field name="date_create"/>

                                    </tree>
                                </field>
                                </group>


                                <header>
                                   <button name="anilytic" string="Show data report" type="object" class="oe_highlight"/>
                                </header>

                                <field name="html_iframe"/>



                            </page>

                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>


