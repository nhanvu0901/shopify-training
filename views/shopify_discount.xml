      <template id="view_shopify_data_chart" name="view_shopify_data_chart_name">
            <head>
                 <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!--                <script src="/test_shopi/static/chart_render.js"/>-->
            </head>
            <body>
                 <canvas id="densityChart" ></canvas>

                <script type="text/javascript">
                      window.global_variable = <t t-raw="data"/>

                     console.log("Hello")
                    var densityCanvas = document.getElementById("densityChart");
<!--                    Chart.defaults.global.defaultFontFamily = "Lato";-->
<!--                    Chart.defaults.global.defaultFontSize = 18;-->
                     var revenueData = {
                              label: 'Total Price Off',
                              data: window.global_variable.data_money_reduce,
                              backgroundColor: 'rgba(0, 99, 132, 0.6)',
                              borderColor: 'rgba(0, 99, 132, 1)',
                              yAxisID: "y-axis-density"
                            };
                            var numberAddToCart = {
                              label: 'Number Add To Cart',
                              data: window.global_variable.data_time_add_to_cart,
                              backgroundColor: 'rgba(99, 132, 0, 0.6)',
                              borderColor: 'rgba(99, 132, 0, 1)',
                              yAxisID: "y-axis-gravity"
                            };
                            var comboData = {
                              labels: window.global_variable.label,
                              datasets: [revenueData, numberAddToCart]
                            };
                            var chartOptions = {
                                  scales: {
                                    xAxes: [{
                                      barPercentage: 1,
                                      categoryPercentage: 0.6
                                    }],
                                    yAxes: [{
                                      id: "y-axis-density",
                                      ticks: {
                                          beginAtZero: true
                                      }
                                    }, {
                                      id: "y-axis-gravity",
                                      ticks: {
                                          beginAtZero: true
                                        }
                                    }
                                    ]
                                  }
                                };

                                var barChart = new Chart(densityCanvas, {
                                  type: 'bar',
                                  data: comboData,
                                  options: chartOptions
                                });
                </script>


            </body>
        </template>







