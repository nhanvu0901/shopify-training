<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="shopify_shop">
      <field name="name">shopify shop</field>
      <field name="model">s.sp.shop</field>
      <field name="arch" type="xml">

        <tree>
             <field name="email"/>
             <field name="domain"/>
             <field name="currency"/>
             <field name="country_name"/>
             <field name="shop_name"/>
             <field name="shop_id"/>
             <field name="xero_access_token"/>
             <field name="xero_refresh_token"/>
            <field name="user"/>
            <field name="setting"/>
            <field name="discount_combo"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="shopify_shop">
      <field name="name">Shopify shop</field>
      <field name="res_model">s.sp.shop</field>
      <field name="view_mode">tree,form</field>
    </record>





    <!-- Top menu item -->
    <menuitem name="Shopify" id="menu_root"/>
        <menuitem name="Shopify Shop" id="menu_shopify_shop" parent="menu_root"  action="shopify_shop"/>




  </data>
</odoo>